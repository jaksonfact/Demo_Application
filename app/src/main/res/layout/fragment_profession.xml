<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/professionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7DF99"
    tools:context=".ProfessionFragment">

    <Button
        android:id="@+id/professionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:background="#D1EBB3"
        android:text="Profession"
        android:textSize="24sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/experienceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="130dp"
        android:backgroundTint="#AFB8EA"
        android:text="Experience"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/hobbyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="210dp"
        android:backgroundTint="#DEAEAB"
        android:text="Hobby"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>